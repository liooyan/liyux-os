## 直接编译为可运行文件
# windows 环境下的变量
ifeq ($(OS),Windows_NT)

  CC_i686 := gcc
  AS_i686 := as

  CC_x86_64 := gcc
  AS_x86_64 := as

else

# Linux 环境下的变量
 ifeq ($(shell uname),Linux)

  CC_i686 := i686-elf-gcc
  AS_i686 := i686-elf-as

  CC_x86_64 := x86_64-elf-gcc
  AS_x86_64 := x86_64-elf-as


 endif
endif


## debug
DEBUG = -g3


ARCH_OPT := -D__ARCH_IA32
O := -Og
W := -Wall -Wextra -Wno-unknown-pragmas
CFLAGS := -std=gnu99 -ffreestanding $(O) $(W) $(ARCH_OPT) $(DEBUG)
LDFLAGS := -ffreestanding $(O) -nostdlib -lgcc $(DEBUG)


SCAN_SRC = $(shell find $(1) -name "*.[cS]")