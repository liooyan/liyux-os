## 直接编译为可运行文件
# windows 环境下的变量
ifeq ($(OS),Windows_NT)

  CC := gcc
  AS := as
  LD := ld
else

# Linux 环境下的变量
 ifeq ($(shell uname),Linux)

  CC := gcc
  AS := as
  LD := ld

 endif
endif


## debug
DEBUG = -g3



ARCH_OPT :=  -m32
O := -Og
W := -Wall -Wextra -Wno-unknown-pragmas
CFLAGS := -std=gnu99 -ffreestanding $(O) $(W) -nostdinc $(ARCH_OPT)
LDFLAGS := -static   -nostdlib  -m elf_i386