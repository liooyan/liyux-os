## 直接编译为可运行文件
# windows 环境下的变量
ifeq ($(OS),Windows_NT)

  CC := gcc
  AS := as
  MKDIR_END = #

else

# Linux 环境下的变量
 ifeq ($(shell uname),Linux)

  CC := i686-elf-gcc
  AS := i686-elf-as

 endif
endif


## debug
DEBUG = -g3



ARCH_OPT := -D__ARCH_IA32
O := -O2
W := -Wall -Wextra -Wno-unknown-pragmas
CFLAGS := -std=gnu99 -ffreestanding $(O) $(W) $(ARCH_OPT)
LDFLAGS := -ffreestanding $(O) -nostdlib -lgcc
